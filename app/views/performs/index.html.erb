<h1>Performs#index</h1>
<p>Find me in app/views/performs/index.html.erb</p>
<p><%= link_to "new spectacle", new_spectacle_path %> |
  <%= link_to "see spectacles", spectacles_path %>
</p>
<div class="cards_container no_link" style="border: red, solid, 1px">
  <% @performs.each do | perform | %>

    <%= link_to perform do %>

      <div class="card p-4 mt-2 mb-2" style="border: red, solid, 1px">
        <p class="mb-0"><strong>date </strong><%= perform.date.strftime("%a %d %^b %k:%M") %></p>
        <p><strong>Company </strong><%= perform.spectacle.company %></p>
        <h2><%= perform.spectacle.title %></h2>

      </div>


    <% end %>

  <% end %>
</div>
