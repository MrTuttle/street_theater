<div class="d-flex justify-content-between">
  <h1>Edit</h1>
  <div class="">
      <%= link_to "retour", spectacles_path, class:"btn btn-flat" %>
  </div>
</div>
<div class="card p-4">
  <div class="d-flex flex-row-reverse">
    <%= link_to "+ Add perform", new_spectacle_perform_path(@spectacle) %>
  </div>
  <div class="d-flex flex_column">
    <p><strong>Performs : </strong></p>
    <% @spectacle.performs.all.each do | perform | %>
      <p><%= perform.date %> <%= link_to "modifiy", edit_perform_path %> | </p>
    <% end %>
  </div>
  <%= render "form", spectacle: @spectacle %>
</div>
