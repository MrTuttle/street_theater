<h1>Spectacles#:index</h1>
<p>Find me in app/views/spectacles/:index.html.erb</p>
  <p><%= link_to "new spectacle", new_spectacle_path %> |
  <%= link_to "see performs", performs_path %>
  </p>
  <div class="cards_container">
    <% @spectacles.each do | spectacle | %>
    <div class="card p-4 mt-2">
      <h4><%= spectacle.title %></h4>
      <h5><%= spectacle.company %></h5>
      <p><%= spectacle.origin %></p>
      <p><%= spectacle.public %></p>


      <p>
        <% spectacle.performs.each do | day | %>
         | <strong><%= day.date.strftime("%a %d") %></strong> <%= day.date.strftime("%^b") %>
      <% end %>
      </p>

      <div class="d-flex emulated-flex-gap">
        <%= link_to "Detail", spectacle, class:"btn btn-flat"%>
        <%= button_to "Delete", spectacle, class:"btn btn-flat", method: :delete %>
        <%= link_to "Edit", edit_spectacle_path(spectacle), class:"btn btn-flat" %>
      </div>
    </div>
  <% end %>
  </div>
